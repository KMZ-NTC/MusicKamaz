<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarContainer"
        layout="@layout/toolbar"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </androidx.appcompat.widget.SearchView>

    <FrameLayout
        android:id="@+id/view_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/folder_bottoms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/folder_bottoms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_fragment"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/aux"
            style="@style/Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_bt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf=" parent"
            android:text="AUX"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/marginTop"
            android:layout_marginEnd="@dimen/marginTop"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn_bt"
            style="@style/Button"
            android:layout_marginStart="@dimen/marginTop"
            android:layout_marginEnd="@dimen/marginTop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/disk"
            app:layout_constraintStart_toEndOf="@id/aux"
            app:layout_constraintTop_toTopOf="parent"
            android:text="BT"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/disk"
            style="@style/Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_bt"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/marginTop"
            android:layout_marginEnd="@dimen/marginTop"
            android:text="DISK"
            android:gravity="center"
            android:textColor="@color/white"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
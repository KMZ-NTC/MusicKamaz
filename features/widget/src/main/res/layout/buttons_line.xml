<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/prev_widget"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_btn_background"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:layout_margin="10dp"
        android:src="@drawable/ic_previous_white_studio"

        />
    <ImageButton
        android:id="@+id/play_pause_widget"
        tools:ignore="ContentDescription"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        style="@style/controlButtonBigBlue"
        android:src="@drawable/ic_play"
        />
    <ImageButton
        android:id="@+id/next_widget"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_btn_background"
        android:baselineAligned="false"
        style="@style/controlButtonBigBlue"
        android:src="@drawable/ic_next_white_studio"
        tools:ignore="ContentDescription"
        android:layout_margin="10dp"
        />
</LinearLayout>